<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:sae="urn:import:org.roger600.gwt.editorsample.client.editor">

  <ui:style>
    .leftMargin {
      margin-left: 20px;
    }
  </ui:style>
  
  <g:VerticalPanel addStyleNames="{style.leftMargin}">

    <!-- UUID. -->
    <g:HorizontalPanel>
      <g:HTML text="UUID"/>
      <sae:DefaultAttributeEditor.View ui:field="uuid">
        <sae:valuebox>
          <g:TextBox/>
        </sae:valuebox>
      </sae:DefaultAttributeEditor.View>
    </g:HorizontalPanel>

    <!-- Name. -->
    <g:HorizontalPanel>
      <g:HTML text="Name"/>
      <sae:DefaultAttributeEditor.View ui:field="name">
        <sae:valuebox>
          <g:TextBox/>
        </sae:valuebox>
      </sae:DefaultAttributeEditor.View>
    </g:HorizontalPanel>

  </g:VerticalPanel>
  
</ui:UiBinder>